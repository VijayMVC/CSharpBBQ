@model CSharpBbq.Data.Model.Ladder.LadderWeek

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_LayoutNoLinks.cshtml";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<fieldset>
    <legend>LadderWeek</legend>

    <div class="display-label">WeekNumber</div>
    <div class="display-field">@Model.WeekNumber</div>

    <div class="display-label">StertDate</div>
    <div class="display-field">@String.Format("{0:g}", Model.StertDate)</div>

    <div class="display-label">EndDate</div>
